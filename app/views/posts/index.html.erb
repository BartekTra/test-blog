<body class="bg-gray-300 text-[24px]">
  <div>
    <% @posts.each do |post| %>
      <div class="flex flex-col items-center mx-[10px]">
        <div class="w-[600px] text-start px-[10px] py-[10px] border border-t-0 border-black">
          <%= link_to post, class: "inline-block " do %>
            <% if post.post_image.attached? %>
              <%= image_tag post.post_image, class: "rounded-lg max-w-[630px] max-h-[280px]" %>
            <% else %>
              <%= image_tag 'default.jpg', class: 'rounded-lg ' %>
            <% end %>
          <% end %>
          <%= link_to post.title, post %>
        </div>
      </div>
    <% end %>
  </div>
</body>