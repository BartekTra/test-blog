<%= form_with model: post do |f| %>
  <div class="text-gray-300">
    <div>
      <%= f.label t('title') %><br>
      <%= f.text_field :title, class: "rounded_field" %>
    </div>
    <div>
      <%= f.label t('body') %><br>
      <%= f.text_area :body, class: "rounded_field" %><br>
    </div>
    <div>
      <%= f.submit class: "rounded_button" %>
    </div>
  </div>
  <%= f.label t('postpic') %>
  <%= f.file_field :post_image, class: "mt-[10px]" %><br>
<% end %>
